<UserControl x:Class="lr3.UserControlForKarusel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lr3"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <StackPanel Orientation="Vertical">
        <TextBlock Width="90" FontSize="7" HorizontalAlignment="Center" Margin="5" Foreground="#FF229618" >Этот элемент для карусели</TextBlock>

        <RichTextBox Height="50" BorderBrush="{x:Null}" SelectionBrush="#FF10D700"/>
        <Button Content="Press" Margin="5" Height="20" Background="#FF8FFFCE" BorderBrush="{x:Null}"/>
    </StackPanel>
</UserControl>
